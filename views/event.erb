<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

<div class="row">
	<div class="span4">  
		<img src="/img/logos/logo-01.png">
	</div>
	
	<div class="span7" style="background-color:rgba(255,255,255,0.9);padding:5px;-moz-border-radius: 5px; border-radius: 5px;">
		<div class="row">
			<div class="span1">
				<span class="label label-info"><%=@event.date.strftime("%d")%><br/><span class="lead"><%=DTHelper::MONTHS_ES[@event.date.strftime("%b")]%></span></span><br/>
				&nbsp;<br/>
				<a href="https://twitter.com/share" class="twitter-share-button" data-via="kleer_la">Tweet</a></br>
				<div class="fb-like" data-send="false" data-layout="box_count" data-width="450" data-show-faces="true"></div>
			</div>
			<div class="span5">
				<h3><%=@event.event_type.name%></h3>
				<img src="/img/flags/<%=@event.country_code.downcase%>.png"/> <%=@event.city%>, <%=@event.country%>&nbsp;
			</div>
		</div>
	</div>
	
	<div class="span7">&nbsp;</div>
	
	<div class="span7" style="background-color:rgba(255,255,255,0.9);padding:5px;-moz-border-radius: 5px; border-radius: 5px;">
		<ul class="nav nav-tabs" id="myTab">
		  <li class="active"><a href="#description" data-toggle="tab">Descripci√≥n</a></li>
		  <li><a href="#goal" data-toggle="tab">Objetivos</a></li>
		  <li><a href="#recipients" data-toggle="tab">Destinado A</a></li>
		  <li><a href="#program" data-toggle="tab">Programa</a></li>
		  <li><a href="#trainer" data-toggle="tab"><i class="icon-user"></i>&nbsp;<%=@event.trainer.name%></a></li>
		  <li><%if @event.is_sold_out%>
				<a href="#registration" data-toggle="tab"><span class="label label-important">Completo</span></a>
			<%else%>
				<a href="<%=@event.registration_link%>" target="_blank"><span class="label label-success">Registrarme!</span></a>
			<%end%></li>
		</ul>
		
		<div class="tab-content">
		  <div class="tab-pane active" id="description">
		  	<%=@markdown_renderer.render( @event.event_type.description )%>
		    <br/>&nbsp;
		  </div>
		  <div class="tab-pane" id="goal">
		  	<%=@markdown_renderer.render( @event.event_type.goal )%>
		    <br/>&nbsp;
		  </div>
		  <div class="tab-pane" id="recipients">
		  	<%=@markdown_renderer.render( @event.event_type.recipients )%>
			<br/>&nbsp;
		  </div>
		  <div class="tab-pane" id="program">
		  	<%=@markdown_renderer.render( @event.event_type.program )%>
			<br/>&nbsp;
		  </div>
		  <div class="tab-pane" id="trainer">
			<%=@markdown_renderer.render( @event.trainer.bio )%>
			<br/>&nbsp;
		  </div>
		  <div class="tab-pane" id="registration">
			<%if @event.is_sold_out%>
				<div class="alert alert-error"><strong>Ouch!</strong> El cupo para este evento se encuentra completo.</div>
				Puedes contactarnos a <a href="mailto:entrenamos@kleer.la">entrenamos@kleer.la</a> para conocer nuevas fechas.
			<%else%>
				<!-- iframe para registro TBD -->
			<%end%>
			<br/>&nbsp;
		  </div>
		</div>
		
		<script type="text/javascript" src="/js/jquery.js"/></script>
		
	</div>
</div>